package no;

public class No {
	protected No dir;
	protected No esq;
	protected int qtd;
	protected int cod;
	
	public No (No dir, No esq, int qtd) throws Exception
	{
		if (qtd < 1)
			throw new Exception("A quantidade não é válida");
		
		this.dir = dir;
		this.esq = esq;
		this.qtd = qtd;
	}
	
	public No (int cod, int qtd) throws Exception
	{
		if (qtd < 1)
			throw new Exception("Quantidade inválida");
		
		if (cod < 0 || cod > 255)
			throw new Exception("Código inválido");
		
		this.cod = cod;
		this.qtd = qtd;
	}
}
